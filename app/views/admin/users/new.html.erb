<h1>管理者サインアップ</h1>
<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this <%= @user.name %> from being saved:</h2>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<%= form_with(model: [:admin, @user], local: true) do |f| %>
  <div>
    <%= f.label :名前 %>
    <%= f.text_field :name %>
  </div>
  <br>
  <div>
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>
  <br>
  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <br>
  <div>
    <%= f.label :再度確認password %>
    <%= f.password_field :password_confirmation %>
  </div>
  <br>
    <%= f.label :管理者権限付与 %>
    <%= f.check_box :admin %>
  <br>
  <br>
  <p class = "sakusei">
  <%= f.submit "作成する" %>
  </p>
<% end %>